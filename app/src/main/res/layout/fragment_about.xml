<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Proyecto EFSRT V (AquaRiot)"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivAboutImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/app_icono" />

        <!-- Descripción general -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:justificationMode="inter_word"
            android:text="Esta aplicación está diseñada para facilitar la compra de productos de acuarismo, brindando una experiencia intuitiva y eficiente al usuario.\nUtiliza tecnologías modernas como Firebase y Android Studio para ofrecer un sistema robusto y en tiempo real."
            android:textSize="16sp" />

        <!-- Sección: Tecnologías utilizadas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Tecnologías utilizadas:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="• Kotlin\n• Android Studio\n• Firebase Authentication\n• Firestore\n• Realtime Database\n• Firebase Storage\n• Glide"
            android:textSize="16sp" />

        <!-- Sección: Objetivos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Objetivos:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="• Integrar servicios de Firebase para autenticación, datos y almacenamiento.\n• Permitir compras organizadas con carrito y control de stock."
            android:textSize="16sp" />

        <!-- Sección: Mejoras futuras -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Mejoras futuras:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="• Integración con pasarelas de pago reales (Stripe).\n• Panel web de administración para productos y órdenes.\n• Notificaciones push para promociones y recordatorios."
            android:textSize="16sp" />

        <!-- Copyright centrado -->
        <TextView
            android:id="@+id/tvCopyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"
            android:text="© 2025 Pedro Sirvas. Todos los derechos reservados."
            android:textColor="@color/app_morado"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>
